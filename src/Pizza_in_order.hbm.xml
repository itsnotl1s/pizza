<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.mai.pizza.Pizza_in_order" table="pizza_in_order">
        <id name="id" column="id" type="int">
            <generator class="native"></generator>
        </id>
        <many-to-one name="order_id" class="com.mai.pizza.Order"
                     column="order_id" unique="true" not-null="true"
                     cascade="all"></many-to-one>
        <many-to-one name="pizza_id" class="com.mai.pizza.Pizza"
                     column="pizza_id" unique="true" not-null="true"
                     cascade="all"></many-to-one>
        <property name="count" column="count" type="int"></property>
    </class>
</hibernate-mapping>